---
import PageLayout from "@layouts/PageLayout.astro";
import { HOME } from "@consts";

import Hero from "@components/main/Hero.astro";
import FeaturedWorks from "@components/main/FeaturedWorks.astro";
import AboutMe from "@components/main/AboutMe.astro";
import Articles from "@components/main/Articles.astro";
import Contact from "@components/main/Contact.astro";
---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
	<div class='wrapper'>
		<Hero />
		<FeaturedWorks />
		<AboutMe />
		<Articles />
		<Contact />
	</div>

	<script src='../scripts/app.js'></script>
	<script src='../scripts/gsap-init.js'></script>
</PageLayout>
