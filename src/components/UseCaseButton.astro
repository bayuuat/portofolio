---
type Props = {
	href: string;
};

const { href } = Astro.props;
---

<a
	href={href}
	class='relative group w-fit flex pl-8 pr-20 py-5 flex-nowrap rounded-2xl border border-black/15 dark:border-white/20 hover:bg-black/5 dark:hover:bg-white/5 hover:text-black dark:hover:text-white transition-colors duration-300 ease-in-out'
>
	<div class='text-3xl'>
		<slot />
	</div>
	<svg
		xmlns='http://www.w3.org/2000/svg'
		viewBox='0 0 24 24'
		class='absolute top-1/2 right-4 -translate-y-1/2 size-8 fill-none stroke-current'
		stroke-width='1.5'
	>
		<line
			x1='5'
			y1='12'
			x2='19'
			y2='12'
			class='translate-x-3 group-hover:translate-x-0 scale-x-0 group-hover:scale-x-100 transition-transform duration-300 ease-in-out'></line>
		<polyline points='12 5 19 12 12 19' class='-translate-x-1 group-hover:translate-x-0 transition-transform duration-300 ease-in-out'></polyline>
	</svg>
</a>
